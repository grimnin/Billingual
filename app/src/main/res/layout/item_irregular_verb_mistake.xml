<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/baseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pastSimpleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50" />

    <TextView
        android:id="@+id/pastParticipleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3" />

    <TextView
        android:id="@+id/meaningTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC107" />

    <TextView
        android:id="@+id/correctAnswersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7" />

    <TextView
        android:id="@+id/wrongAnswersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B" />

    <TextView
        android:id="@+id/madeMistakeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDeleteFromVerbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/rectangle"
            android:text="@string/delete_from_mistakes" />
    </LinearLayout>

</LinearLayout>
