<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.authorization.Login">

    <TextView

        android:id="@+id/textViewLoginText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="@string/login_title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextLoginL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoginText" />

    <EditText
        android:id="@+id/editTextPasswordL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextLoginL"
        app:layout_constraintStart_toStartOf="@+id/editTextLoginL"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginL" />

    <TextView
        android:id="@+id/textView_create_now"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="@string/create_account"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordL"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordL"

        app:layout_constraintTop_toBottomOf="@+id/buttonLoginL" />

    <Button
        android:id="@+id/buttonLoginL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/rectangle"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordL"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordL"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordL" />

    <TextView
        android:id="@+id/textViewGoogleL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="@string/sign_in_with_google"
        app:layout_constraintEnd_toEndOf="@+id/textView_create_now"
        app:layout_constraintStart_toStartOf="@+id/textView_create_now"
        app:layout_constraintTop_toBottomOf="@+id/textView_create_now" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@color/transparent"
        android:src="@drawable/googleg_standard_color_18"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGoogleL"
        app:layout_constraintEnd_toEndOf="@+id/textViewGoogleL"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="@+id/textViewGoogleL"
        app:layout_constraintTop_toTopOf="@+id/textViewGoogleL" />

    <EditText
        android:id="@+id/textViewGoogleNick"
        android:layout_width="273dp"
        android:layout_height="119dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="141dp"
        android:hint="@string/enter_your_nick"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318" />

    <Button
        android:id="@+id/buttonNickG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewGoogleNick"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewGoogleNick"
        app:layout_constraintTop_toBottomOf="@+id/textViewGoogleNick"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/forgot_password"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordL"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordL" />


</androidx.constraintlayout.widget.ConstraintLayout>